{
  "compilerOptions": {
    "target": "ES2021",
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist/",
    "lib": ["ES2021"],
    "importHelpers": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}